{
  "name": "No Distract",
  "description": "Extension for helping with my Social sites addiction (mainly Youtube). And also help with ADHD",
  "version": "1.3",
  "persistent": true,
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "pages/index.html",
    "default_icon": "icon64.png"
  },

  "background": {
    "service_worker": "scripts/background.js"
  },

  "permissions": ["storage", "tabs", "activeTab"],

  "host_permissions": ["http://*/*", "https://*/*"],

  "options_page": "pages/settings.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/url_check.js"]
    }
  ]
}
